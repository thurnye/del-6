<%- include('./includes/head.ejs') %> 


<%- include('./includes/navigation.ejs') %> 

       <h1>Flight Details</h1>
       <section>
            <div class="card" style="width: 450px;">
                <div class="mb-12">
                    <h1>Airport : <%= flight.airport %> 
                </div> 

                <div class="mb-12">
                    <h1>Airline : <%= flight.airline %> </h1>
                </div> 
                <div class="mb-12">
                    <h1>Air No. : <%= flight.flightNo %> 
                </div>

                <div class="mb-12">
                    <h1>Departure : <%= depart%> 
                </div>
                
                <div>
                    <a href="/single-flight/edit/<%= flight._id%>" class="btn btn-primary"> Edit</a>

                    <form action="/single-flight/delete-flight/<%= flight._id%>" method="POST">
                        <input type="hidden" name="flightId" value=<%= flight._id%> >
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </div>
            </div>
      
            <form action="/single-flight/<%= flight._id%>/add-arrival" method="POST">
                <div class="mb-12">
                    <label for="airline" class="form-label">Airport</label>
                    <select class="form-select" name="arrivalAirport" aria-label="Default select example" >
                        <option selected> select airport...</option>
                        <option value="AUS"> AUS</option>
                        <option value="DFW"> DFW</option>
                        <option value="DEN"> DEN</option>
                        <option value="LAX"> LAX</option>
                        <option value="SAN"> SAN</option>
                    </select>
                </div> 
                <div class="mb-12">
                    <label for="exampleFormControlInput1" class="form-label"> Arrival Date</label>
                    <input type="datetime-local" class="form-control"  name="arrivalDate" id="exampleFormControlInput1">
                </div>
                <button type="submit" class="btn btn-secondary btn-lg" >Add Arival</button>
            </form>
        </section>
        


<%- include('./includes/footer.ejs') %> 